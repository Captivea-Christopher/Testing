<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_view_users_form" model="ir.ui.view">
            <field name="name">Inherite form view res users form</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[2]" position="after">
                    <page string="Shopify Info" name="shopify_info">
                        <group string="Instance Info">
                            <field name="shopify_instance_ids" colspan="4" nolabel="1">
                                <tree editable="bottom">
                                    <field name="instance_id" options="{'no_create': True}"/>
                                    <field name="shopify_user_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>