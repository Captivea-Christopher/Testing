<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="shopify_inherited_instance_form_view_ept" model="ir.ui.view">
            <field name="name">Inherite.View.Shopify.Instance.form.view</field>
            <field name="model">shopify.instance.ept</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="shopify_ept.shopify_instance_form_view_ept"/>
            <field name="arch" type="xml">
                <field name="inventory_adjustment_id" position="after">
                    <field name="default_auto_workflow_id"/>
                    <field name="shopify_salesperson_id"/>
                    <!-- <field name="shopify_store_time_zone" readonly="1"/> -->
                </field>
                <xpath expr="/form/sheet/group[2]" position="after">
                    <group string="Default Tax Configuration">
                        <group>
                            <field name="account_id" options="{'no_open': True, 'no_create_edit' : True}"/>
                            <field name="refund_account_id" options="{'no_open': True, 'no_create_edit' : True}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>